<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nclab.chl848.t3android.Activities.LobbyActivity"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:id="@+id/lbRole"
        android:layout_marginTop="34dp"
        android:textSize="60sp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lbMsg"
        android:layout_below="@+id/lbRole"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ximageView"
        android:layout_marginTop="43dp"
        android:src="@drawable/xpiece"
        android:layout_below="@+id/lbMsg"
        android:layout_alignStart="@+id/lbRole"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/oimageView"
        android:layout_marginTop="54dp"
        android:src="@drawable/opiece"
        android:layout_below="@+id/ximageView"
        android:layout_alignStart="@+id/ximageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player1"
        android:id="@+id/txtPlayer1"
        android:textSize="40sp"
        android:layout_alignStart="@+id/lbMsg"
        android:layout_marginTop="185dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player2"
        android:id="@+id/txtPlayer2"
        android:textSize="40sp"
        android:layout_alignStart="@+id/txtPlayer1"
        android:layout_marginTop="320sp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true" />

    <ImageButton
        tools:ignore="ContentDescription"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnBackToSC"
        android:src="@drawable/buttonback"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:adjustViewBounds="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="30dp" />

    <ImageButton
        tools:ignore="ContentDescription"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnStartGame"
        android:src="@drawable/buttonplay"
        android:background="@android:color/transparent"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/btnBackToSC"
        android:scaleType="fitCenter"
        android:layout_marginLeft="200dp" />

</RelativeLayout>
